<div class="row">
  <div class="col-lg-12">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <h2><strong>Title:</strong><%= @link.title %></h2>
  </div>
  <div class="col-lg-6">
   <% image_ex = [".jpg", ".png", ".gif", ".jpeg"] %>
          <% if image_ex.any? { |ext| @link.url.include? ext } %>
              <%= image_tag @link.url, :class => "img-responsive", :style => "max-height:70px;" %>
          <% else %>
              <p><%= link_to url_for(@link.url) %></p>
          <% end %>
  </div>
</div>

<div class="row">
  <%= render_comments(@link) %>
</div>
    